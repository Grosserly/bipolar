{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "strict": true,

        // Required for working with Maps because no working polyfill for
        //   Map apparently exists
        "target": "es6",

        // Required (get it?) to accomodate discord.js's incompatibilities
        //   with `import`
        "esModuleInterop": true,

        // Required for ES6 and upward?
        "moduleResolution": "node",

        "typeRoots": [
            "src/@types",
            "node_modules/@types",
        ],
    },
    "include": ["./src/**/*"],
}
