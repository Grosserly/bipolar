{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "strict": true,

        // ES6 or higher required for Maps and Sets since their polyfills
        //   are broken
        "target": "es6",

        // Required for ES6 and upward?
        "moduleResolution": "node",

        "typeRoots": [
            "src/@types",
            "node_modules/@types",
        ],
    },
    "include": ["./src/**/*"],
}
